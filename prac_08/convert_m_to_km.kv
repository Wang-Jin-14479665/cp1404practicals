BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: '34'
            font_size: 48
            # Call the handle calculate function
            on_text: app.handle_calculate()


        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
            Button:
                text: 'Down'

    Button:
        text: 'Convert miles to km'
        on_press: app.handle_calculate()


    Label:
        id: output_label
        font_size: 48
        text: 'output'
        color: (1, 1, 0, 1)